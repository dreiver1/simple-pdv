generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  permissions RolePermission[]
  users       User[]
}

model Permission {
  id    String           @id @default(uuid())
  name  String           @unique
  roles RolePermission[]
}

model RolePermission {
  roleId       String     @id @default(uuid())
  permissionId String
  Role         Role       @relation(fields: [roleId], references: [id])
  Permission   Permission @relation(fields: [permissionId], references: [id])
}

model User {
  userId   String  @id @default(uuid())
  name     String
  password String
  userName String  @unique
  email    String  @unique
  data     String
  cpf      String  @unique
  Role     Role?   @relation(fields: [roleId], references: [id])
  roleId   String?
}

model Product {
  productId          String    @id @default(uuid())
  barcode            String
  sku                String
  name               String
  description        String
  categoryId         Category? @relation(fields: [categoryCategoryId], references: [categoryId])
  price              Float
  costPrice          Float
  discount           Float?
  stockQuantity      Int
  weight             Float?
  categoryCategoryId String?
  items              Item[]
  imgURL             String    @default("/files/1720098149585_por-do-sol-e-silhuetas-de-arvores-nas-montanhas-generative-ai.jpg")
}

model Category {
  categoryId String     @id @default(uuid())
  name       String
  parentId   String?
  parent     Category?  @relation("CategoryToParent", fields: [parentId], references: [categoryId])
  children   Category[] @relation("CategoryToParent")
  Product    Product[]
}

model Order {
  orderId         String   @id @default(uuid())
  items           Item[]
  date            DateTime @default(now())
  status          String   @default("await paypament")
  paypamentMethod String   @default("none")
}

model Item {
  quantity  Int
  itemId    String   @id @default(uuid())
  Product   Product? @relation(fields: [productId], references: [productId])
  productId String?
  Order     Order?   @relation(fields: [orderId], references: [orderId])
  orderId   String?
}
