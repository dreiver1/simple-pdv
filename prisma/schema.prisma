generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  userId   String @id @default(uuid())
  name     String
  password String
  userName String
  email    String
  data     String
  cpf      String
}

model Product {
  productId          String    @id @default(uuid())
  barcode            String
  sku                String
  name               String
  description        String
  categoryId         Category? @relation(fields: [categoryCategoryId], references: [categoryId])
  price              Float
  costPrice          Float
  discount           Float?
  stockQuantity      Int
  weight             Float?
  categoryCategoryId String?
  items              Item[]
}

model Category {
  categoryId String     @id @default(uuid())
  name       String
  parentId   String?
  parent     Category?  @relation("CategoryToParent", fields: [parentId], references: [categoryId])
  children   Category[] @relation("CategoryToParent")
  Product    Product[]
}

model Order {
  orderId String   @id @default(uuid())
  items   Item[]
  date    DateTime @default(now())
  status  String
  paypamentMethod String
}

model Item {
  quantity  Int
  itemId    String   @id @default(uuid())
  Product   Product? @relation(fields: [productId], references: [productId])
  productId String?
  Order     Order?   @relation(fields: [orderId], references: [orderId])
  orderId   String?
}
